<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/galleryFragment">
    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.plung.imagesearchapp.ui.gallery.GalleryFragment"
        android:label="Gallery"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/action_galleryFragment_to_fullscreenActivity"
            app:destination="@id/fullscreenActivity"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_galleryFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <activity
        android:id="@+id/fullscreenActivity"
        android:name="com.plung.imagesearchapp.ui.details.FullscreenActivity"
        android:label="Photo"
        tools:layout="@layout/activity_fullscreen">

        <argument
            android:name="photo_url"
            app:argType="string"
            app:nullable="true"
            android:defaultValue=""/>

    </activity>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.plung.imagesearchapp.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="photo_url"
            app:argType="string"
            app:nullable="true"
            android:defaultValue=""/>
    </fragment>
</navigation>